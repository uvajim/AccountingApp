<Window x:Class="JimboBooks.Views.ExpenseCard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Expense Details" Height="300" Width="300">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <Label>Expense Name:</Label>
            <TextBox x:Name="NameTextBox" />
            
            <Label>Amount:</Label>
            <TextBox x:Name="AmountTextBox" />
            
            <Label>Date:</Label>
            <TextBox x:Name="DateTextBox" />
            
            <Button Content="📋 Add Receipt"
                    Click="AddReceipt"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="10" />
            
            <Image x:Name="ReceiptImage"
                   Stretch="Uniform"
                   Height="200"
                   Margin="0,0,0,10" />
            
            <Button Content="Save Expense" Click="SaveExpense_Click" Margin="10" />

        </StackPanel>
    </ScrollViewer>
</Window>